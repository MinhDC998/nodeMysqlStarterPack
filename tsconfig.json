{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@components/*": ["src/components/*"],
        "@models/*": ["src/database/models/*"],
        "@utils/*": ["src/utils/*"],
      }
    },
    "include": ["src/**/*"]
  }
  